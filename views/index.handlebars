<h1>Burgers!</h1>

<h2>Un-devoured Burgers!</h2>

<ul>
	{{#each burgers}}
		{{#unless devoured}}
			{{> burger-block devoured=true}}
		{{/unless}} 
	{{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
	{{#each burgers}} 
		{{#if devoured}} 
			{{> burger-block devoured=false}}
		{{/if}} 
	{{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-form" action="/" method="POST">
	<div class="form-group">
		<label for="burg">Burger:</label>
		<input type="text" id="burg" name="name">
	</div>
	<button class="btn-primary" type="submit">Add Burger</button>
</form>